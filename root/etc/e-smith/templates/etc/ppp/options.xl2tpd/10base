ipparam xl2tpd
ipcp-accept-local
ipcp-accept-remote
noccp
auth
refuse-pap
crtscts
idle 1800
mtu 1410
mru 1410
nodefaultroute
debug
lock
proxyarp
connect-delay 5000

# ms-dns from our dns/NameServers prop:
{ join("\n", map { 'ms-dns ' . $_ } @dnsServers); }
# end ms-dns

{
    #
    # Contact winbind daemon to validate user credentials.
    #
    # If enabled, *-secrets files are no longer used.
    #

    $OUT = "# ntlm_auth binary not found";
    if ( -x "/usr/bin/ntlm_auth" ) {
	$OUT = "plugin winbind.so\n" .
	    "ntlm_auth-helper \"/usr/bin/ntlm_auth --helper-protocol=ntlm-server-1\"";
    }
}
